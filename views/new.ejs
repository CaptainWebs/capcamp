<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
          <h3 class="display-3">Add a new campground</h3>
          <hr>
          <p class="lead">
            <a class="btn btn-primary btn-lg" href="/campgrounds" role="button">Go Back</a>
          </p>
        </div>
    </header> 
    
<form action="/campgrounds" method="POST" style="width:40%;height:auto;margin:0 auto;">
    <input type="text" name="name" placeholder="name of the campground">
    <input type="text" name="imageUrl" placeholder="url of the image">
    <input type="text" name="description" placeholder="description about the campground">
    <input type="submit">
</form>

</div>
<% include partials/footer%>