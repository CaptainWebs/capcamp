<% include partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Bootcamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        
       </div>
       <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" style="width:100%" src="<%= campground.imageUrl%>">
            </div>
            <div class="caption-full">
                <h6 class="text-right">$ 15 / a night</h6>
                <a href="#"><h5><%= campground.name %></h5></a>
                <p><%= campground.description %></p>
                <p>Submitted by: <%= campground.author.username %></p>
                <% if(currentUser && campground.author.id.equals(currentUser._id)){%>
                
                  <a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                <form style="display:inline-block" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                
                <% } %>
                
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add Comment</a>
                </div>
                
                <hr>
                
                <%campground.comments.forEach(function(data){%>
                
                <div class="row">
                    <div class="col-md-12">
                        <strong><%=data.author.username%></strong>
                        <span class="pull-right">10 days ago</span>
                        <p style="font-size:12px;font-style:italic;"><%=data.text%></p>
                        <% if(currentUser && data.author.id.equals(currentUser._id)){%>
                        <a class="btn btn-sm btn-warning" href="/campgrounds/<%=campground._id%>/comments/<%=data._id%>/edit">Edit</a>
                    <form style="display:inline-block" action="/campgrounds/<%=campground._id%>/comments/<%=data._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    <% }%>
                    </div>
                    
                  
                </div>
                <% }); %>
                
            </div>
            
            
            
            <p>
                
            </p>
            


       </div>
    </div>
</div>

<% include partials/footer %>